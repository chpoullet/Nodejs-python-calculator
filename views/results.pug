doctype html
html
   head
      title = "Search results"
      style.
          body {
              font-size: 17px;
              text-align:center;
          }
   body
     h1 Search results!
     table(style='width:100%', border='1')
      thead
        tr: th First name
          th Last name
          th Email
      tbody
        each user in users
          tr
            td=user.firstName
            td=user.lastName
            td=user.email

     a(href='/') Back to the homepage
